@model Project__B_Night.Entities.Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h2 class="alert alert-success">Profil Bilgisi Düzenleme</h2>

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Profil Bilgileri</div>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <label>Adınız</label>
                            <br />
                            <br />
                            @Html.TextBoxFor(x => x.Name, new { @class = "Form-control" })
                            <br />
                            <br />
                            <label>Soyadınız</label>
                            <br />
                            <br />
                            @Html.TextBoxFor(x => x.Surname, new { @class = "Form-control" })
                            <br />
                            <br />
                            <label>Emailiniz</label>
                            <br />
                            <br />
                            @Html.TextBoxFor(x => x.Email, new { @class = "Form-control" })
                            <br />
                            <br />
                            <label>Kullanıcı Adınız</label>
                            <br />
                            <br />
                            @Html.TextBoxFor(x => x.UserName, new { @class = "Form-control" })
                            <br />
                            <br />
                            <label>Şifreniz</label>
                            <br />
                            <br />
                            @Html.TextBoxFor(x => x.Password, new { @class = "Form-control" })
                            <br />
                            <br />
                            <button class="btn btn-success">Bilgileri Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>