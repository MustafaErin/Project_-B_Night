@model List<Project__B_Night.Entities.Reservation>
@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<h2 class="alert alert-success">Reservasyon Listesi</h2>

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Rezervasyon İşlemleri</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">İsim</th>
                                    <th scope="col">Tur Rotası</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">RezervasyonTarihi</th>
                                    <th scope="col">ödeme</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.Phone</td>
                                        <td>@item.PersonCount</td>
                                        <td>@item.ReservationDate.ToShortDateString()</td>
                                        @if (item.Payment == true)
                                        {
                                            <td style="background-color:greenyellow">@item.Payment</td>
                                        }
                                        else if (item.Payment == false)
                                        {
                                            <td style="background-color:bisque">@item.Payment</td>
                                        }
                                        <td><a href="/Admin/Reservation/DeleteReservation/@item.ReservationId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Reservation/UpdateReservation/@item.ReservationId" class="btn btn-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Reservation/CreateReservation/" class="btn btn-primary">Yeni Rezervasyon Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>