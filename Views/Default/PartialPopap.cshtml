@model Project__B_Night.Entities.Reservation
<a href="#" class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#Modal1">
    rezervasyon Yap
</a>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">
                    Rezervasyon ekranı
                </h2>
            </div>
            <form method="post">
                <div class="modal-body">
                    <br />
                    <label>Ad Soyad:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    <br />
                    <label>Telefon no:</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    <br />
                    <label>Misafir Sayısı</label>
                    @Html.TextBoxFor(x => x.PersonCount, new { @class = "form-control" })
                    <br />
                    <label>Rezervasyon Tarihi</label>
                    @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control" })
                    <br />
                    <label>Açıklama</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    <br />
                    <br />
                    <button class="btn btn-success" type="submit"><a href="/Default/payment/">kaydet ve ödemeye Geç</a></button>
                </div>
               
            </form>

        </div>
    </div>
</div>